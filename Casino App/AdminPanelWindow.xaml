<Window x:Class="Casino_App.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель Администратора" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Панель Администратора" FontSize="24" FontWeight="Bold" Width="310"/>

            <Button Content="Управление пользователями" Width="223" Height="40" Margin="0,10" Click="ManageUsersButton_Click"/>
            <Button Content="Просмотр отчетов" Width="224" Height="40" Margin="0,10" Click="ViewReportsButton_Click"/>
            <Button Content="Просмотр транзакций" Width="221" Height="40" Margin="0,10" Click="ViewTransactionsButton_Click"/>

            <Button Content="Назад" Width="223" Height="40" Margin="0,20" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
