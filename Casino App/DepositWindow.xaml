<Window x:Class="Casino_App.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пополнение баланса" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Заголовок -->
        <TextBlock Text="Пополнение баланса" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Margin="0,20,0,0"/>

        <!-- Поле для ввода суммы -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите сумму:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="DepositAmountTextBox" Width="200" Height="30" TextAlignment="Center"/>

            <!-- Кнопка для подтверждения -->
            <Button Content="Пополнить" Width="150" Height="40" Margin="0,20,0,0" Click="DepositButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

