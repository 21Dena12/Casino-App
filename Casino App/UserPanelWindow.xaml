<Window x:Class="Casino_App.UserPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель Пользователя" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Панель Пользователя" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button Content="Игровые сессии" Width="200" Height="40" Margin="0,10" Click="GameSessionsButton_Click"/>
            <Button Content="Финансовые операции" Width="200" Height="40" Margin="0,10" Click="TransactionsButton_Click"/>
            <Button Content="История игр" Width="200" Height="40" Margin="0,10" Click="GameHistoryButton_Click"/>

            <Button Content="Назад" Width="200" Height="40" Margin="0,20" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
